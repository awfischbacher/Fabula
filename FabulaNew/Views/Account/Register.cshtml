@model RegisterViewModel
@{
    ViewBag.Title = "Register";
}

<h1>Register</h1>
<div asp-validation-summary="ModelOnly" class="text-danger"></div>
<form method="post" asp-action="Register">
    <div class="form-group row my-3">
        <div class="col-3"><label>Username:</label></div>
        <div class="col-3">
            <input asp-for="Username" class="form-control" />
        </div>
        <div class="col">
            <span asp-validation-for="Username" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row my-3">
        <div class="col-3"><label>Email Address:</label></div>
        <div class="col-3">
            <input asp-for="Email" class="form-control" />
        </div>
        <div class="col">
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row my-3">
        <div class="col-3"><label>Password:</label></div>
        <div class="col-3">
            <input type="password" asp-for="Password" class="form-control" />
        </div>
        <div class="col">
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row my-3">
        <div class="col-3"><label>Confirm Password:</label></div>
        <div class="col-3">
            <input type="password" asp-for="ConfirmPassword" class="form-control" />
        </div>
        <div class="col">
            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
        </div>
    </div>

    <div class="row">
        <button type="submit" class="btn btn-primary p-3">Register</button>
        <p class="p-3">Already have an account? <a asp-action="LogIn">Log in</a></p>
    </div>
</form>
