@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center container">
    <h1 class="display-4">Fabula</h1>

    <a href="#" class="btn btn-primary mt-2 mb-4">Create new post</a>

    <div class="row">
        <div class="col-2 filters">
            <div class="btn-group-vertical" role="group">
                <button type="button" class="btn btn-primary">Announcements</button>
                <button type="button" class="btn btn-primary">Discussions</button>
                <button type="button" class="btn btn-primary">Debates</button>
                <button type="button" class="btn btn-primary">Support Posts</button>
            </div>
        </div>
        <div class="col posts">
            <ul class="list-group">
                <li class="post list-group-item d-flex border border-1 p-3">
                    <p class="m-0 flex-grow-1 text-start"><b>Thread Title</b></p>
                    <p class="m-0 w-25 text-end"><b>Date posted</b></p>
                    <p class="m-0 w-25 text-end"><b>Replies</b></p>
                </li>

                <li class="post list-group-item d-flex border border-1 p-3">
                    <p class="m-0 flex-grow-1 text-start">Example thread with title</p>
                    <p class="m-0 w-25 text-end">May 8th</p>
                    <p class="m-0 w-25 text-end">2</p>
                </li>
            </ul>
        </div>
    </div>
</div>
